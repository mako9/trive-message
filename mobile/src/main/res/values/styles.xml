<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/ColorPrimary</item>
    <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    <item name="colorAccent">@color/ColorAccent</item>
    <item name="android:icon">@drawable/trivemessage</item>
    <item name="android:logo">@drawable/trivemessage</item>
    <item name="displayOptions">useLogo|showHome</item>
    <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
    <item name="android:itemTextAppearance">@style/TextAppearance</item>
    <item name="android:itemBackground">@color/ColorPrimary</item>
    <item name="android:dividerHorizontal">@color/iron</item>
    <item name="android:dividerHeight">2px</item>
  </style>

  <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/ColorPrimary</item>
    <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    <item name="colorAccent">@color/ColorAccent</item>
    <item name="android:icon">@drawable/trivemessage</item>
    <item name="android:logo">@drawable/trivemessage</item>
    <item name="displayOptions">useLogo|showHome</item>

    <item name="android:textColorHint">@color/TextColor.White</item>
    <item name="colorControlNormal">@color/TextColor.White</item>
    <item name="colorControlActivated">@color/iron</item>
    <item name="colorControlHighlight">@color/TextColor.White</item>
  </style>

  <style name="MyPopupMenu"
      parent="@android:style/Widget.Holo.ListPopupWindow">
    <item name="android:popupBackground">@color/ColorPrimary</item>
  </style>

  <style name="TextAppearance">
    <item name="android:textColor">@color/TextColor.White</item>
  </style>

  <style name="TextView" parent="AppTheme">
    <item name="android:textColor">@color/TextColor.DarkGray</item>
    <item name="android:textSize">@dimen/Text.Standard</item>
  </style>

  <style name="TextView.Header" parent="TextView">
    <item name="android:textColor">@color/ColorPrimary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/Text.VeryLarge</item>
  </style>

  <style name="TextView.EmptyState" parent="TextView">
    <item name="android:textColor">@color/TextColor.White</item>
    <item name="android:textSize">@dimen/Text.EmptyState</item>
    <item name="android:layout_margin">@dimen/Margin.Double</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="TextView.Small" parent="TextView">
    <item name="android:textColor">@color/TextColor.Gray</item>
    <item name="android:textSize">@dimen/Text.Small</item>
  </style>

  <style name="EditText" parent="AppTheme">
    <item name="android:textColor">@color/TextColor.Black</item>
    <item name="android:textColorHint">@color/TextColor.Gray</item>
    <item name="android:layout_marginRight">@dimen/Margin.Standard</item>
    <item name="android:layout_marginLeft">@dimen/Margin.Standard</item>
    <item name="android:layout_marginTop">@dimen/Margin.Half</item>
    <item name="android:layout_marginBottom">@dimen/Margin.Half</item>
    <item name="android:textSize">@dimen/Text.Standard</item>
  </style>

  <style name="DeleteButton" parent="AppTheme">
    <item name="android:textColor">@color/TextColor.DarkGray</item>
    <item name="android:textSize">@dimen/Text.Standard</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Divider.Horizontal" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/Divider.Width</item>
    <item name="android:background">@color/Divider</item>
  </style>

  <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
    <item name="colorAccent">@color/white</item>
    <item name="android:textColorPrimary">@color/iron</item>
    <item name="android:background">@color/ColorPrimary</item>
  </style>

  <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
    <item name="colorButtonNormal">@color/iron</item>
    <item name="android:textColor">@color/ColorPrimaryDark</item>
  </style>

  <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/Background.CardView</item>
    <item name="android:textColorPrimary">@android:color/black</item>
    <item name="android:windowBackground">@color/Background.CardView</item>
    <item name="android:buttonBarButtonStyle">@color/Background.CardView</item>
    <item name="android:colorButtonNormal">@color/Background.CardView</item>
  </style>

</resources>
